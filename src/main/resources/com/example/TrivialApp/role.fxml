<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" alignment="center" hgap="10" prefHeight="259.0" prefWidth="506.0" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Label text="Select Role" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <ComboBox fx:id="roleComboBox" promptText="yo" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Admin" />
                <String fx:value="Player" />
            </FXCollections>
        </items>
    </ComboBox>

    <Button onAction="#selectRoleButtonClicked" text="Select" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
